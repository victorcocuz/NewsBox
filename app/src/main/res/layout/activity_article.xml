<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.newsbox.ArticleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:id="@+id/article_web_title"
            style="@style/TextTitle"
            tools:text="Title" />

        <TextView
            android:id="@+id/article_contributor"
            style="@style/TextShade"
            tools:text="Contributor" />

        <View style="@style/SeparationLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_medium"
            android:layout_marginBottom="@dimen/margin_negative_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/article_date_and_time"
                style="@style/TextShade"
                tools:text="@string/hint_web_publication_time" />

            <ImageView
                style="@style/GVSLinearLayoutImage"
                android:src="@drawable/ic_dark_add" />

            <ImageView
                style="@style/GVSLinearLayoutImage"
                android:src="@drawable/ic_dark_share" />

        </LinearLayout>




        <ImageView
            android:id="@+id/article_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_trail_text"
            android:layout_marginBottom="@dimen/margin_large"
            style="@style/TextTrail"
            tools:text="Trail text" />

        <TextView
            android:id="@+id/article_body"
            style="@style/TextBody"
            tools:text="Body" />

    </LinearLayout>
</ScrollView>
