<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/article_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/container_large"
    android:layout_marginBottom="@dimen/margin_xsmall"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_xsmall"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/article_card_thumbnail"
            android:layout_width="@dimen/container_medium"
            android:layout_height="@dimen/container_medium"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/article_card_web_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/text_medium"
            tools:text="@string/hint_title" />

        <ImageView
            android:layout_width="@dimen/container_small"
            android:layout_height="@dimen/container_small"
            android:layout_marginBottom="@dimen/margin_large"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/ic_dark_remove" />

    </LinearLayout>

</android.support.v7.widget.CardView>