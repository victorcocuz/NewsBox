<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>


    <!--General-->
    <style name="SeparationLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_negative_medium</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="GVSLinearLayoutImage">
        <item name="android:layout_width">@dimen/container_medium</item>
        <item name="android:layout_height">@dimen/container_medium</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--Text Styles-->

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_xxsmall</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextTrail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextShade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <!--General View Saved-->
    <style name="GVSCategory">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GVSLinearLayout">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/container_medium</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GVSLinearLayoutText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/text_xlarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/margin_medium</item>
    </style>


    <!--Main Menu-->
    <style name="MenuGeneral">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MenuGeneralImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_xsmall</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MenuGeneralText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_xsmall</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>

</resources>
